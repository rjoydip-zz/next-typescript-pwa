{
  "name": "next-typescript-pwa",
  "version": "1.0.0",
  "license": "ISC",
  "title": "Next Typescript PWA",
  "scripts": {
    "lint": "tsc",
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "pre-deploy": "yarn clean-cache && yarn build-css && yarn lint && yarn build",
    "clean-cache": "rm -rf .next && rm -rf node_modules/.cache",
    "build-css": "postcss tailwind.css -o index.css"
  },
  "dependencies": {
    "next": "latest",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-icons": "^3.10.0",
    "styled-components": "^5.1.0",
    "tailwindcss": "^1.4.1"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "5.0.1",
    "autoprefixer": "^9.7.6",
    "babel-plugin-styled-components": "^1.10.0",
    "husky": "^4.2.5",
    "next-compose-plugins": "^2.2.0",
    "next-purgecss": "^4.0.0",
    "postcss-cli": "^7.1.1",
    "typescript": "3.5.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn && yarn pre-deploy"
    }
  }
}
